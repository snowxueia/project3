<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <Button
        android:id="@+id/Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text="Menu"

        android:textColor="#1C2A79"
        android:textColorHighlight="#2F4DF0"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2" />


    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Previous"
        android:textColor="#1C2A79"

        app:layout_constraintRight_toLeftOf="@id/Menu"
        app:layout_constraintTop_toBottomOf="@id/guideline2" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Next"
        android:textColor="#1C2A79"
        app:layout_constraintLeft_toRightOf="@id/Menu"
        app:layout_constraintTop_toBottomOf="@id/guideline2" />


    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Daily Task"
        android:textColor="#1C2A79"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="(v.)determine beforehand(syn.)\n predestine preordain"
        android:textColor="#1C2A79"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:orientation = "horizontal"
        app:layout_constraintGuide_percent="0.05" />



    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dismantle"
        android:textColorHighlight="#F44336"
        android:textSize="18sp"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"  />
    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="foredain"
        android:textColorHighlight="#F44336"
        android:textSize="18sp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />


        />
    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="promulgate"
        android:textColorHighlight="#F44336"
        android:textSize="18sp"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"  />
    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accommodate"
        android:textColorHighlight="#F44336"
        android:textSize="18sp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"  />
</androidx.constraintlayout.widget.ConstraintLayout>